# gitlab config

production: &base
  gitlab:
    host: {{ getv "/vhost" }}
    port: 443
    https: true
    email_from: {{ getv "/smtp_from" }}
    support_email: {{ getv "/smtp_support_email" }}
    default_projects_limit: 10
    default_can_create_group: true
    default_can_create_team: true
    username_changing_enabled: true
    signup_enabled: true
    default_projects_features:
      issues: true
      merge_requests: true
      wiki: true
      wall: true
      snippets: true
      public: false

  gravatar:
    enabled: true

  ldap:
    enabled: false

  omniauth:
    enabled: true

    allow_single_sign_on: true
    block_auto_created_users: false

    providers:
       - { name: 'google_oauth2', app_id: '{{ getv "/oauth_google_app_id" }}',
           app_secret: '{{ getv "/oauth_google_app_secret" }}',
           args: { access_type: 'offline', approval_prompt: '' } }
       - { name: 'twitter', app_id: '{{ getv "/oauth_twitter_app_id" }}',
           app_secret: '{{ getv "/oauth_twitter_app_secret" }}'}
       - { name: 'github', app_id: '{{ getv "/oauth_github_app_id" }}',
           app_secret: '{{ getv "/oauth_github_app_secret" }}' }

  satellites:
    path: /home/git/gitlab-satellites/

  backup:
    path: "tmp/backups"

  gitlab_shell:
    repos_path: /home/git/repositories/
    hooks_path: /home/git/gitlab-shell/hooks/

    upload_pack: true
    receive_pack: true

  git:
    bin_path: /usr/bin/git
    max_size: 524288000
    timeout: 60
